# Use Rasa SDK base image
FROM rasa/rasa-sdk:latest

# Set working directory
WORKDIR /app

# Copy your actions code
COPY actions/ ./actions/

# Environment variables
ENV PYTHONUNBUFFERED=1
ENV PORT=5055

# Expose the port Rasa Actions Server uses
EXPOSE 5055

# Default command to run actions server
CMD ["rasa", "run", "actions", "--port", "5055"]
